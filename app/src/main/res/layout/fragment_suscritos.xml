<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.karolb.protegemosapp.SuscritosFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="end"
            android:orientation="vertical">

            <Button
                android:id="@+id/close"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/btn_dialog"
                android:gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="607dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/pro" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="INICIO DE SESION"
                android:textAllCaps="false"
                android:textColorLink="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="326dp"
            android:layout_height="305dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="No. Contrato"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="Contraseña"
                android:inputType="textPersonName" />


            <Button
                android:id="@+id/iniciosesion"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center"
                android:text="INICIAR SESION" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center"
                android:text="Señor Suscriptor, para iniciar sesion la contraseña es el numero de cedula del titular del contrato. " />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>
